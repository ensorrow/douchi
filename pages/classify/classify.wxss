.container{
    padding: .3rem .2rem;
    display: block;
}
.tags-box{
    margin-bottom: 1rem;
}
.tags_title{
    background: url("../../img/books.png") no-repeat 0 center #c4f2dd;
    font-size: .9rem;
    margin-bottom: 1rem;
    padding: .3rem .4rem;
    color: darkcyan;
    border-bottom:2px solid #a6e3c7;
    background-size: 2rem;
}
.tag{
    margin:.2rem .4rem;
    padding: .2rem .3rem;
    font-size: .8rem;
    display: inline-block;
    border:1px solid #ddd;
    border-radius: .3rem;
    color: #666;
    cursor: pointer;
    background-color: #f2f2f2;
}
.tag-hover{
    background-color: #eee;
}