/**index.wxss**/
.container{
    display: flex;
    flex-direction: column;
    height: 100%;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: fixed;
  right: 36rpx;
  bottom: 60rpx;
  z-index: 999;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 24rpx;
}

/**首页style**/
.slide-image{
    width: 100%;
    height: 100%;
}
.bookitems-section{
    flex: 1;
    overflow: auto;
    background-color: #fdfdfd;
}
.book_item{
    padding: .4rem;
    position: relative;
    overflow: hidden;   
    box-shadow: 0 0 1px rgba(117, 180, 153,.8);
}
.book_item_img{
    float: left;
    width: 30%;
    height: 6.9rem;
}
.book_item_infos{
    width:68%;
    padding-left: 2%;
    float: right;
}
.book_title_wra{
    display: inline-block;    
    position: relative;
    width: 100%;
}
.book_title{
	overflow: hidden;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 6.4rem;
    line-height: 1rem;
    font-family:Helvetica,Arial,sans-serif;
    font-size: .8rem;
    color: rgb(96, 147, 122);
}
.book_star,.book_author,.book_tags,.book_item_summary,.book_price{
    font-size: .7rem;
    color: #666;
    margin: 4rpx 0;
}
.book_price{
	font-size: .8rem;
}
.book_tags{
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.book_star{
    color: coral;
    position: absolute; 
    right: 1rem; 
    top: 0rem;
    font-size: .8rem; 
}

.book_item_summary{
    display: inline-block;
    margin-top: 10rpx;
    line-height: 36rpx;
    height: 108rpx;
    color: #333;
    overflow: hidden;
    position: relative;
}
.book_item_summary::after{
	content: '...';
	display: inline-block;
	width: .8rem;
	height: 36rpx;
	position: absolute;
	right: 12rpx;
	bottom: 4rpx;
	background-color: #fff;
}
